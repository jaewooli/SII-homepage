{
  "name": "SII auth Popup",
  "description": "로그인/회원가입 및 Dreamhack 로그인 버튼",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://localhost:8080/*",
    "https://dreamhack.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/sii-logo-16.png",
      "32": "/images/sii-logo-32.png",
      "64": "/images/sii-logo-64.png",
      "128": "/images/sii-logo-128.png"
    }
  },
  "icons": {
    "16": "/images/sii-logo-16.png",
    "32": "/images/sii-logo-32.png",
    "64": "/images/sii-logo-64.png",
    "128": "/images/sii-logo-128.png"
  },
  "options_page": "options.html"
}